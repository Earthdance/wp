[class*='__heading']
  color white
  font-family sans
  font-size 4rem
  line-height 1
  padding 5rem 0
  text-align center
  text-shadow -1px 1px 0 black


  +below(950px)
    font-size 2.5rem
    padding 2.5rem 0

  +below(600px)
    font-size 1.75rem
    padding 1.75 rem 0
    text-shadow -1px 1px 0 grey

[class*='__heading'].colorBrown
  color brown
  text-shadow none

.news__heading
  font-size 1.5rem
  padding 0 0 1.5rem 0
  text-align left

[class*='__subheading']
  color white
  font-family sans
  font-size 3rem
  font-weight normal
  text-align center
  text-shadow -1px 1px 0 black

  +below(950px)
    font-size 2rem

  +below(600px)
    font-size 1.75rem
    text-shadow -1px 1px 0 grey

[class*='__title']
  color brown
  font-size 2rem
  text-align left
  text-shadow none

