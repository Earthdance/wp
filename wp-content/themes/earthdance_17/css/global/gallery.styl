.gallery
  &__layer
    display flex
    flex-flow row wrap
    width 100%

    +below(660px)
      flex-direction column
      //flex-flow nowrap
      align-items center
      justify-content center

  &__item
    border 10px solid white
    color white
    display flex
    height 300px
    width calc(50% - 2rem)
    margin 1rem
    //box-shadow 0 10px 6px -6px charcoal
    overflow hidden

  &__item
    border 10px solid #e6e6e8


  &__heading
    // color indigo
    font-size 4rem

    +below(660px)
      font-size 2.5rem

  &__button
    background-size cover
    //background-blend-mode overlay
    background-position center center
    border none
    box-shadow none
    border-radius 0
    color green
    display flex
    align-items flex-end
    justify-content center
    height 100%
    width 100%
    will-change transform
    transition transform .3s ease-in-out

    span
      background-color hsla(0, 0, 100%, 1)
      color green
      display block
      padding .5rem 1rem

    &:hover
      border none
      cursor pointer
      transform scale(1.1)

      span
        background-color green
        border none
        color white
