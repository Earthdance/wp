.gallery
  &__layer
    background-color green
    display flex
    flex-flow row wrap
    width 100%

    +below(660px)
      flex-direction column
      //flex-flow nowrap
      align-items center
      justify-content center

  &__item
    background-size cover
    //background-blend-mode overlay
    background-position center center
    border 10px solid white
    color white
    display flex
    align-items center
    justify-content center
    height 300px
    width calc(50% - 2rem)
    margin 1rem
    box-shadow 0 10px 6px -6px charcoal


  &__heading
    // color indigo
    font-size 4rem

    +below(660px)
      font-size 2.5rem

  &__button
    color white

    &.white
      color white

      &::after
        background-color white

    &::after
      background-color white

    &:hover
      color indigo


.greenBg
  background-color green
