// Wordpress WYSIWYG styles


.alignleft
  float left
  width 50%
  margin 1rem 1rem 1rem 0
  border 10px solid fog

.alignright
  float right
  width 50%
  margin 1rem 0 1rem 1rem
  border 10px solid fog

.alignnone
  border 10px solid fog


// This style is used on Staff/Board interior pages
.bio-image
  background-repeat no-repeat
  background-size cover
  background-position center center
  border 20px solid fog
  height 550px
  width 100%

  +below(800px)
    height 400px

  +below(600px)
    height 250px


.frame-border
  margin-top 4rem
  position relative
  box-shadow 0 30px 36px rgba(0, 0, 0, 0.5)
  border 11px solid #ededed
  width 400px
  //max-width 25rem
  //height 547px
  +below(660px)
    width 300px

.frame-inset
  background-position center
  background-size cover
  box-shadow inset 0 1px 5px rgba(0, 0, 0, 0.5)
  // background-color #EEFF41  //#bebebe
  border 32px solid #f5f5f5
  max-width 100%
  max-height 200px
  padding 6.5rem 0

  &:before
    content: ''
    display block
    position absolute
    top 0
    left 0
    z-index 999
    width 100%
    height 100%
    box-shadow inset 0 20px 20px rgba(0, 0, 0, 0.3)
