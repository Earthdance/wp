[class*="mc-field"]
  display flex
  flex 1
  padding-top 1rem

  input, select, ul
    font-size 1rem
    margin-left 1rem
    list-style none

  li label
    padding-left 1rem

input#mc-embedded-subscribe.button
  background-color green
  border 3px solid transparent
  border-radius 5px
  box-shadow -1px 1px 0 black
  color white
  font-size 1rem
  margin-top 1rem
  padding .5rem 1rem
  text-shadow 1px 1px 0 black

  &:hover
    border 3px solid currentColor
    background-color white
    color currentColor

[title="View previous campaigns"]
  display none
