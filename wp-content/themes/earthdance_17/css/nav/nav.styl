.nav
  &__layer

    &:after
      content: ''
      display block
      height 100px
      width 100%
      background-image linear-gradient(hsla(0, 0, 0%, .6), trans)
      position absolute
      top 80px
      left 0
      z-index -1

      +below(950px)
        display none

    &.nav--active

      //transform translateY(-300%)
      background-color lighten(green, 5%)
      overflow-y scroll
      height 100vh
      width  100vw
      position fixed
      z-index 1

      &:after
        content: ''
        display block
        height 0px
        width 100%

      .nav__container
        display block

  &__container
    justify-content space-around

    +below(950px)
      display none

    li
      list-style none

    a
      color white
      display inline-block
      font-size 1.25rem
      padding .5rem 1rem
      text-shadow 1px 1px 0 black
      width 100%

      &:hover
        background-color darkGreen

    .menu-item-has-children
      position relative

      &:hover
        background-color green

        > a + .sub-menu
          display block
          background-color green

      a
        width 100%
        height 100%

    .menu-item
      // li

    .sub-menu
      display none
      position absolute
      top 100%
      left 0
      z-index 10

      +below(950px)
        display block
        padding-left 1.5rem
        position relative

      a
        width 400px

        +below(950px)
          width 100%

