.nav
  &__layer

    &:after
      content: ''
      display block
      height 100px
      width 100%
      background-image linear-gradient(hsla(0, 0, 0%, .6), trans)
      position absolute
      top 80px
      left 0
      z-index -1

  &__container
    justify-content space-around
    padding-top .5rem

    li
      list-style none

    a
      color white
      display flex
      font-size 1.5rem
      text-shadow 1px 1px 0 black

  +tablet()
    background-color yellow

  +mobile()
    background-color orange
