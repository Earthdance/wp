.nav
  &__layer

    &:after
      content: ''
      display block
      height 100px
      width 100%
      background-image linear-gradient(hsla(0, 0, 0%, .6), trans)
      position absolute
      top 80px
      left 0
      z-index -1

  &__container
    justify-content space-around

    li
      list-style none

    a
      color white
      display inline-block
      font-size 1.25rem
      padding .5rem 1rem
      text-shadow 1px 1px 0 black
      &:hover
        background-color green

    .menu-item-has-children
      position relative

      &:hover > a + .sub-menu
        display block
        background-color green

      a
        width 100%
        height 100%


    .menu-item
      // li

    .sub-menu
      display none
      position absolute
      top 100%
      left 0
      z-index 10

      a
        width 400px


  +tablet()
    background-color yellow

  +mobile()
    background-color orange


