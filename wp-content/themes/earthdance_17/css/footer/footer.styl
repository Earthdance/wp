.footer
  &__layer
    background-color white
    height 100px

  &__container
    height 100%
    justify-content space-between

  &__item
    align-items center
    display flex
    padding 0 1rem

    +mobile()
      margin 0 auto
      padding 0 .5rem

  &__item svg
    // margin-right .75rem
    width 60px

    path
      fill brown

  &__heading
    color brown
    font-family cursive
    font-size 2rem
    padding 0 .75rem
    text-shadow none

  &__copyright
    padding-bottom 0

  &__privacy
    padding-bottom 0

    +mobile()
      display none
