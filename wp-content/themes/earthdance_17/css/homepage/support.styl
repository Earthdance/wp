.support
  &__layer
    background-image url(img/girlAndGreens.jpg)
    // background-position center center
    background-repeat no-repeat
    background-size cover
    height 145vh

  &__container
    align-items center
    flex-direction column
    height 100%
    justify-content space-around

  &__slogan
    display flex
    flex-direction column


  &__slogan svg
    display flex
    margin 0 auto
    width 150px

    path
      fill white

  &__heading
    color white
    font-family cursive
    font-size 6rem
    text-align center
    text-shadow 1px 1px 0 black

    span
      display flex

  &__subheading
    color white
    font-family cursive
    font-size 6rem
    padding-bottom 3rem
    text-align center
    text-shadow 1px 1px 0 black

  &__options
    display flex
    justify-content space-around

  &__button
    background-color green
    border 1px solid green
    border-radius 5px
    color white
    font-family roboto condensed
    padding 1rem 3rem
