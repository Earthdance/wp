.believe
  &__layer
    height 100%

  &__container
    flex-direction column
    height 100%

  &__columns
    align-items center
    padding 5rem 0

  &__heading
    color brown
    font-family sans
    font-size 4.5rem
    flex 1
    // padding 2rem
    text-align center

  &__content
    align-items center
    color brown
    display flex
    flex 1

  &__photo
    align-items center
    display flex
    flex-direction column
    padding-bottom 5rem

  &__image
    align-self flex-end
    background-image url(img/groupJump.jpg)
    background-repeat no-repeat
    background-size cover
    display flex
    height 50vh
    width 50vw

  &__button
    background-color brown
    color green
    padding .5rem 5.5rem
    margin-right 8rem
    margin-top 4rem
