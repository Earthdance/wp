.stats
  &__layer
    background-color brown

  &__container
    align-items center
    flex-direction column
    height 100%

  &__heading
    color white

  &__columns
    flex-direction column
    padding 5rem 0
    width 100%

    +below(950px)
      padding 2rem 0 5rem 0

  &__item
    display flex
    padding 1rem
    align-items center
    width 100%

    +below(950px)
      flex-direction column

    +below(600px)
      flex-direction column
      padding 0 0 1rem 0


  &__number
    color white
    flex 1
    font-weight bold
    font-size 3rem
    text-align right
    padding 0 3rem 0 0

    +below(950px)
      padding 2rem 0 1rem 0
      text-align center


  &__content
    align-items center
    color white
    display flex
    flex 1
    font-size 1rem
    padding-top 0

    +ie11()
      padding-top 3rem

    +below(950px)
      text-align center

    p
      margin 0
