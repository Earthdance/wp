.stats
  &__layer
    background-color brown

  &__container
    align-items center
    flex-direction column
    height 100%

  &__heading
    color white

  &__columns
    flex-direction column
    padding 5rem 0

  &__item
    display flex
    padding 1rem
    align-items center

    +tablet()
      flex-direction column

    +mobile()
      flex-direction column

  &__number
    color white
    flex 1
    font-weight bold
    font-size 3rem
    text-align center
    padding 0

  &__content
    align-items center
    color white
    display flex
    flex 1
    font-size 1rem
    padding-top 0

    p
      margin 0
