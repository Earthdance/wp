.feature
  &__layer
    height 100vh
    position relative
    -webkit-transform translate3d(0,0,0)
    background-repeat no-repeat
    background-size cover
    background-positon center center

  &__container
    align-items center
    flex-direction column
    height 100vh
    max-width 100vw
    width 100vw
    justify-content flex-start
    text-align center
    display flex
    align-items center
    background-color transparent
    position absolute
    z-index 1

  &__link
    color white
    display flex
    font-family roboto condensed
    font-size 2rem
    text-shadow 1px 1px 0 black

  &__main
    display flex
    flex-direction column
    height 100%
    justify-content center


  &__main svg
    margin 0 auto
    width 120px
    padding-bottom 2.5rem
    filter drop-shadow(-1px 1px 0px charcoal)

    path
      fill white

  &__heading
    color white
    font-family cursive
    font-size 5rem
    padding 0

  &__subheading
    color white
    font-weight 400


.crossfade
  background-size cover
  background-position center center
  position absolute
  top 0
  left 0
  height 100vh
  width 100vw
  background-repeat no-repeat

  &:nth-of-type(3)
    animation xfade 12s 0s infinite

  &:nth-of-type(2)
    animation xfade 12s 4s infinite

  &:nth-of-type(1)
    animation xfade 12s 8s infinite


@keyframes xfade
  0%
    opacity 0

  20%
    opacity 1

  33%
    opacity 1

  53%
    opacity 0

  100%
    opacity 0
