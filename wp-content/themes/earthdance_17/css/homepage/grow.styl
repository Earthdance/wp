.grow
  &__layer
    background-color white
    height 100%

  &__container
    align-items center
    flex-direction column
    height 100%
    justify-content space-around

  &__heading
    color brown

    span
      display flex

  &__columns
    padding-bottom 5rem

    &:nth-of-type(odd)
      .grow__content
        padding-left 2.5rem

    &:nth-of-type(even)
      flex-direction row-reverse

      .grow__content
        padding-right 2.5rem

    &:nth-of-type(1)
      .grow__pic
        background-image url(img/crateVeggies.jpg)

    &:nth-of-type(2)
      .grow__pic
        background-image url(img/groupLockingArms.jpg)

    &:nth-of-type(3)
      .grow__pic
        background-image url(img/kidsLearning.jpg)

  &__pic
    background-position center center
    background-repeat no-repeat
    background-size cover

  &__title
    color white

  &__content
    flex 1
    display flex
    flex-direction column
    justify-content center
    padding 0 1.5rem


  &__pic
    border: 20px solid green
    flex 1
    height 100%
    padding 6rem 0

  &__button
    display inline-block
    background-color green
    border 3px solid green
    color white

    &:hover
      background-color white
      box-shadow none
      border 3px solid green
      color green
