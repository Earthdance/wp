.grow
  &__layer
    background-color white
    height 100%

  &__container
    align-items center
    flex-direction column
    height 100%
    justify-content space-around

  &__heading
    color brown

    +below(600px)
      padding 2rem 0

    span
      display flex

  &__columns
    padding-bottom 5rem

    +below(950px)
      padding-bottom 2.5rem

    +below(600px)
      align-items center
      padding-bottom 2rem

    &:nth-of-type(odd)
      .grow__content
        padding-left 2.5rem

        +below(600px)
          padding-left 1rem

    &:nth-of-type(even)
      flex-direction row-reverse
      width 100%

      .grow__content
        padding-right 2.5rem

        +below(600px)
          padding-right 0

  &__columns.zipper

    +below(950px)
      flex-direction column

    +below(600px)
      flex-direction column


  &__pic
      background-position center center
      background-repeat no-repeat
      background-size cover
      border 20px solid fog
      flex 1
      height 100%
      padding 6rem 0
      width: 100%

      &.setHeight
        height 500px

    +below(950px)
      padding 8rem 0

    +below(600px)
      padding 4rem 0
      width 65%

  &__subheading
    color white


  &__content
    flex 1
    display flex
    flex-direction column
    justify-content center
    padding 0 2.5rem

    +below(950px)
      align-items center

    +below(600px)
      align-items center
      padding 0
      width 100%

  &__button
    display inline-block
    background-color green
    border 3px solid green
    color white

    &:hover
