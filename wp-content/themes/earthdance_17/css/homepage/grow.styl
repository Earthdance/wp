.grow
  &__layer
    background-color white
    height 100%

  &__container
    align-items center
    display flex
    flex-direction column
    height 100%
    justify-content space-around
    margin 0 auto
    width 70%

  &__heading
    color brown
    font-family cursive
    font-size 6rem
    text-align center

    span
      display flex

  &__zipper
    display flex
    padding 5rem

    &:nth-of-type(even)
      flex-direction row-reverse

    &:nth-of-type(1)
      .grow__pic
        background-image url(img/crateVeggies.jpg)
        background-position center center
        background-repeat no-repeat
        background-size cover

    &:nth-of-type(2)
      .grow__pic
        background-image url(img/fuzzyPlant.jpg)
        background-position center center
        background-repeat no-repeat
        background-size cover

    &:nth-of-type(3)
      .grow__pic
        background-image url(img/groupLockingArms.jpg)
        background-position center center
        background-repeat no-repeat
        background-size cover

  &__subheading
    color white
    font-family cursive
    font-size 5rem
    text-align center

  &__content
    align-items center
    color brown
    display flex
    flex 1
    flex-direction column
    font-family roboto condensed
    font-size 1.5rem
    justify-content center
    padding 0 1.5rem

  &__pic
    border: 20px solid green
    flex 1
    height 100%
    padding 4rem 0

  &__button
    display flex
    background-color green
    border-radius 5px
    color white
    padding .75rem 5rem
