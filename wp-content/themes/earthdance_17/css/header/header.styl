.header
  &__bg
    background-color green
    border-bottom 1px solid hsla(0, 0, 0%, .4)

  &__layer
    //height 100px
    position fixed
    top 0
    left 0
    width 100vw
    z-index 1

  &__container
    align-items center
    justify-content space-between
    padding-bottom .5rem
    padding-top .5rem

    +below(600px)
      padding .5rem

  &__logo-box
    align-items center
    display flex

  &__logo
    align-items center
    color white
    display flex
    font-family cursive
    font-size 2rem
    +below(500px)
      font-size 1.5rem

    &:hover
      color brown

      svg path
        fill brown

    span
      padding 0 .5rem
      transform translateY(6px)

  &__logo svg

    margin-right .75rem
    width 60px

    +below(600px)
      margin 0

    path
      fill white

  &__tagline
    color brown
    font-size 1.5rem
    font-weight 100
    padding 0 .5rem

    +below(1090px)
      font-size 1.25rem

    +below(950px)
      display none

  &__utility
    align-items center
    display flex

    +below(1060px)
      display flex
      flex-direction column

  &__links
    // +below(1060px)
    //   display flex
    //   flex-direction column

  &__social
    align-items center
    display flex

    +below(950px)
      display none

  &__link
    color white
    fill white
    font-weight normal
    padding 0 .5rem

  &__icon
    fill white

    &.hamburger
      display none
      z-index 100
      margin-top 15px

      +below(950px)
        display inline-block

        .icon.icon--ei-navicon
          fill white


.donateBtn
  +below(660px)
    display none
