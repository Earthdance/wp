.header
  &__layer
    background-color green
    border-bottom 1px solid hsla(0, 0, 0%, .4)
    height 100px

  &__container
    align-items center
    height 100%

  &__logo
    align-items center
    color brown
    display flex
    font-family cursive
    font-size 2rem

    span
      padding 0 .5rem

  &__logo svg
    width 60px

    path
      fill brown

  &__tagline
    color brown
    font-family roboto condensed
    font-size 1.5rem
    padding 0 .5rem

  &__social
    align-items center
    display flex

  &__link
    color white
    fill white
    font-size 1.5rem
    padding 0 .5rem

  &__icon
    fill white
