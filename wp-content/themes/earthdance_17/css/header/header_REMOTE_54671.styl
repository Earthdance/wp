.header
  &__layer
    border-bottom 1px solid hsla(0, 0, 0%, .4)
    height 100px

  &__container
    align-items center
    background-color green
    display flex
    height 100%
    justify-content space-around
    margin 0 auto
    width 70%

  &__logo
    align-items center
    color brown
    display flex
    font-family cursive
    font-size 2rem

  &__logo svg
    margin-right .75rem
    width 60px

    path
      fill brown

  &__tagline
    color brown
    font-family roboto condensed
    font-size 1.5rem
    padding-bottom 0

  &__social
    align-items center
    display flex

  &__link
    color white
    fill white
    font-size 1.5rem
    margin 0 .5rem

  &__icon
    fill white
